{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "_comment": "Hook entries to merge into ~/.claude/settings.json. Copy the 'hooks' section into your existing settings.",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ~/.claude/hooks/damage-control/bash-tool-damage-control.py",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ~/.claude/hooks/damage-control/edit-tool-damage-control.py",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ~/.claude/hooks/damage-control/write-tool-damage-control.py",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Grep",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ~/.claude/hooks/index-search/index-search-hook.py",
            "timeout": 3
          }
        ]
      },
      {
        "matcher": "Glob",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ~/.claude/hooks/index-search/index-search-hook.py",
            "timeout": 3
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "startup|resume",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ~/.claude/hooks/doc-check/doc-check-hook.py",
            "timeout": 3
          },
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/index-search/index-repo.sh \"$(git rev-parse --show-toplevel 2>/dev/null || pwd)\"",
            "timeout": 30
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ~/.claude/hooks/session-todo/session-todo-hook.py",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
